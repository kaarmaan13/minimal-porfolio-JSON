---
import { work } from "@cv";
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import WorldMap from "@/icons/WorldMap.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Github from "@/icons/Github.astro";

const { name: actualWork, url: actualWorkUrl } = work[0];
const { name, label, image, location, profiles, phone, email } = basics;
const { address, city, mapsUrl } = location;

const SOCIAL_ICONS: Record<string, any> = {
  LinkedIn,
  Github,
};
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>
        {label} en <a
          href={actualWorkUrl}
          target="_blank"
          rel="noopener noreferrer">{actualWork}</a
        >
      </h2>
      <span>
        <WorldMap />
        <a href={mapsUrl} target="_blank" rel="noopener noreferrer">
          {city}, {address}
        </a>
      </span>
      <footer class="print">
        <article><span>{email}</span><span>{phone}</span></article>

        {
          profiles.map(({ url }) => (
            <span>{url.replace("www.", "").replace("https://", "")}</span>
          ))
        }
      </footer>
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar correo a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:+34${phone}`}
              title={`Llamar a ${name} al telÃ©fono ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, username, url }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={`Visita el prefil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    font-size: 1.2rem;
    text-wrap: balance;
    font-weight: 500;
    color: #444;
  }
  img {
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }
  span {
    color: #444;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }
  footer {
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }
  footer a {
    color: #444;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #cecece;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  footer a:hover {
    background: #d8d8d8;
    color: black;
  }
  @media (max-width: 576px) {
    .container {
      flex-direction: column-reverse;
    }
  }
  @media print {
    .info {
      gap: 0.5rem;
    }
    footer.print {
      display: flex;
      flex-direction: column;
      margin-top: 0;
    }
    footer.print article {
      display: flex;
      flex-direction: column;
    }
  }
</style>
