---
const { title, className } = Astro.props;
---

<section class={className}>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 72px;
  }
  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
  @media print {
    h2 {
    font-size: 1.15rem;
  }
    section {
			margin: 0 auto 8px;
		}
  }
</style>
