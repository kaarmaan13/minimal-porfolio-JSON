---
import ArrowRight from "@/icons/ArrowRight.astro";
import Code from "@/icons/Code.astro";
import { projects } from "@cv";
---

<section class="max-w-3xl mx-auto pt-24" id="proyectos">
  <h2 class="pb-12 flex items-center text-3xl font-semibold gap-x-3 text-gray-900 dark:text-gray-100">
    <Code />Proyectos
  </h2>
  <ul class="grid grid-cols-3 gap-6">
    {
      projects.map(({ img, name, summary, url }) => (
        <article>
          <header>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{name}</h3>
            <p class="text-gray-700 dark:text-gray-300">{summary}</p>
          </header>
          <img class="my-3" src={img} alt={name} />
          
          <footer>
            <a class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-violet-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-violet-700 dark:bg-gray-800 dark:text-gray-400 dark:border-[#4824a8] dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 hover:no-underline hover:scale-105" href={url} target="_blank" rel="noopener noreferrer">
              Visitar <ArrowRight />
            </a>
          </footer>
        </article>
      ))
    }
  </ul>
</section>
