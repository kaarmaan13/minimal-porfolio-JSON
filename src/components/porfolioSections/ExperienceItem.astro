---
import ArrowRight from '@/icons/ArrowRight.astro'
const { title, time, latest, description, button, fin, href, summary } =
  Astro.props;
---

<li class="mb-10 ms-6 grid md:grid-cols-7">
  <div class="col-span-3 pl-2">
    <span
      class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-violet-900"
    >
      <svg
        class="w-2.5 h-2.5 text-violet-800 dark:text-violet-300"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
        ></path>
      </svg>
    </span>
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="hover:no-underline"
      ><h3
        class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white"
      >
        {title}
        {
          latest && (
            <span class="bg-violet-100 text-violet-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-violet-900 dark:text-violet-300 ms-3">
              Actual
            </span>
          )
        }
      </h3></a
    >
    <time
      class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >
      {time}
      {fin && `- ${fin}`}
    </time>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
      {description}
    </p>
  </div>
  <div class="col-span-4">
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
      {summary}
    </p>
    {
      button && (
        <a
          href={button}
          rel="noreferrer noopener" target="_blank"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-violet-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-violet-700 dark:bg-gray-800 dark:text-gray-400 dark:border-[#4824a8] dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 hover:no-underline hover:scale-105"
        >
          Saber m√°s<ArrowRight className="ml-2" />
        </a>
      )
    }
  </div>
</li>
