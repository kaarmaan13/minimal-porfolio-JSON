---
import { work, basics } from "@cv";
import Badge from "@/components/Badge.astro";

const { image, label } = basics;
const { name: actualWork, url: actualWorkURL} = work[0];
---

<div class="flex flex-col items-center gap-5 max-w-3xl mx-auto">
  <figure>
    <img src={image} class="rounded-full size-20 mx-auto" />
  </figure>
  <Badge class="animate-bounce hover:animate-none hover:[zoom:1.05]">Disponible para trabajar</Badge>
  <h2 class="text-5xl font-bold text-center text-gray-700 dark:text-gray-300">Hola soy Manuel,</h2>
  <h3 class="opacity-80 text-gray-700 dark:text-gray-300">{label} en <a class="font-bold underline decoration-violet-500 decoration-2 hover:decoration-violet-700" href={actualWorkURL} target="_blank" rel="noopener noreferrer">{actualWork}</a></h3>
</div>
