---
import { work, basics } from "@cv";
import Badge from "@/components/Badge.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Github from "@/icons/Github.astro";

const SOCIAL_ICONS: Record<string, any> = {
  LinkedIn,
  Github,
};

const { profiles } = basics;

const { image, label } = basics;
const { name: actualWork, url: actualWorkURL } = work[0];
---

<div class="flex flex-col items-center gap-5 max-w-3xl mx-auto">
  <figure>
    <img src={image} class="rounded-full size-20 object-cover mx-auto" />
  </figure>
  <div
    style="min-height:35px"
    class="flex flex-col items-center justify-center"
  >
    <Badge
      href="mailto:manueldelcastillo13@gmail.com"
      rel="noreferrer noopener"
      target="_blank"
      class="hover:no-underline animate-bounce hover:animate-none hover:[zoom:1.05]"
    >
      Disponible para trabajar
    </Badge>
  </div>
  <h2 class="text-5xl font-bold text-center text-gray-700 dark:text-gray-300">
    Hola soy Manuel,
  </h2>
  <h3 class="opacity-80 text-gray-700 dark:text-gray-300">
    {label}
  </h3>
  <div class="flex justify-center gap-2 mx-auto">
    {
      profiles.map(({ network, url }) => {
        const Icon = SOCIAL_ICONS[network];

        return (
          <a
            href={url}
            title={`${network}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-700 dark:text-gray-300"
          >
            <Icon />
          </a>
        );
      })
    }
  </div>
</div>
